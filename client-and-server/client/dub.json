{
	"name": "client",
	"description": "The client for the Team DRaw application.",
	"authors": [
		"Team DRaw"
	],
	"copyright": "Copyright Â© 2023, Team DRaw",
	"targetType": "executable",
	"license": "proprietary",
	"targetPath": "bin",
	"mainSourceFile": "source/app.d",
	"excludedSourceFiles": [
		"../server/source/app.d",
		"../server/source/server_cov_app.d"
	],
	"configurations": [
		{
			"name": "cov",
			"excludedSourceFiles": [
				"./source/app.d"
			],
			"postRunCommands": [
				"sh ../../support/cicd_scripts/remove-excess-coverage-files.sh ./coverage \"..-server-\"",
				"sh ../../support/cicd_scripts/remove-excess-coverage-files.sh ./coverage \"..-source-\"",
				"sh ../../support/cicd_scripts/remove-excess-coverage-files.sh ./coverage \"dub-packages\""
			],
			"dependencies": {
				"gtk-d:gstreamer": "~>3.10.0",
				"gtk-d:gtkd": "~>3.10.0",
				"gtk-d:peas": "~>3.10.0",
				"gtk-d:sv": "~>3.10.0",
				"gtk-d:vte": "~>3.10.0"
			}
		},
		{
			"name": "unittest",
			"excludedSourceFiles": [
				"source/app.d",
				"source/client_cov_app.d",
				"../server/source/app.d",
				"../server/source/server_cov_app.d"
			],
			"preBuildCommands": [
				"dub run unit-threaded -c gen_ut_main -- -f bin/ut.d -d dub"
			],
			"mainSourceFile": "bin/ut.d",
			"dependencies": {
				"unit-threaded": "~>2.1.2",
				"gtk-d:gstreamer": "~>3.10.0",
				"gtk-d:gtkd": "~>3.10.0",
				"gtk-d:peas": "~>3.10.0",
				"gtk-d:sv": "~>3.10.0",
				"gtk-d:vte": "~>3.10.0"
			}
		},
		{
			"name": "docs",
			"excludedSourceFiles": [
				"./source/client_cov_app.d"
			]
		}
	]
}