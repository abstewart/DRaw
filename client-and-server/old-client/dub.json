{
    "name": "client",
    "description": "The client for the Team DRaw application.",
    "authors": [
		"Team DRaw"
    ],
    "copyright": "Copyright Â© 2023, Team DRaw",
    "targetType": "executable",
    "license": "proprietary",
    "targetPath": "bin",
    "mainSourceFile": "app.d",
    "sourcePaths": ["./", "../server/", "../source"],
    "excludedSourceFiles": [
		"../server/app.d",
		"../server/server_cov_app.d"
    ],
    "configurations": [
		{
			"name": "cov",
			"excludedSourceFiles": [
				"app.d"
			],
			"postRunCommands": [
				"sh ../../support/cicd_scripts/remove-excess-coverage-files.sh ./coverage \"..-server-\"",
				"sh ../../support/cicd_scripts/remove-excess-coverage-files.sh ./coverage \"..-source-\"",
				"sh ../../support/cicd_scripts/remove-excess-coverage-files.sh ./coverage \"dub-packages\""
			],
			"dependencies": {
				"bindbc-sdl": "~>1.2.4"
			}
		},
		{
			"name": "unittest",
			"preBuildCommands": [
				"dub run unit-threaded -c gen_ut_main -- -f bin/ut.d -d dub"
			],
			"mainSourceFile": "bin/ut.d",
			"excludedSourceFiles": [
				"client/app.d",
				"server/app.d"
			],
			"dependencies": {
				"unit-threaded": "~>2.1.2",
				"bindbc-sdl": "~>1.2.4"
			}
		}
    ]
}